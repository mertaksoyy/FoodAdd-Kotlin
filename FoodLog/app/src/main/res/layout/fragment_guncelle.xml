<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:centerColor="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:padding="20dp"
    tools:context=".ui.addfood.GuncelleFragment">

    <Button
        android:id="@+id/buttonGuncelle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="#FF5722"
        android:text="Guncelle"
        android:textColor="#CF180B"
        app:icon="@drawable/ic_baseline_change_circle_24"
        app:iconSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating_bar" />

    <TextView
        android:id="@+id/restoranPuantextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="Restoran İçin Puan Giriniz "
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/rating_bar"
        app:layout_constraintEnd_toEndOf="@+id/yemekAdiEditText"
        app:layout_constraintStart_toStartOf="@+id/restoranAditextView"
        app:layout_constraintTop_toBottomOf="@+id/restoranAditextView" />

    <TextView
        android:id="@+id/restoranAditextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:gravity="center|end"
        android:text="Restoran Adı Giriniz : "
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/restoranPuantextView"
        app:layout_constraintEnd_toEndOf="@+id/yemektextView"
        app:layout_constraintStart_toStartOf="@+id/yemektextView"
        app:layout_constraintTop_toBottomOf="@+id/yemektextView" />

    <EditText
        android:id="@+id/restoranAdiEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/restoranAditextView"
        app:layout_constraintEnd_toEndOf="@+id/yemekAdiEditText"
        app:layout_constraintStart_toStartOf="@+id/yemekAdiEditText"
        app:layout_constraintTop_toTopOf="@+id/restoranAditextView" />

    <EditText
        android:id="@+id/yemekAdiEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/yemektextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/yemektextView"
        app:layout_constraintTop_toTopOf="@+id/yemektextView" />

    <TextView
        android:id="@+id/yemektextView"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:gravity="center|end"
        android:text="Yemek Adı Giriniz : "
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/restoranAditextView"
        app:layout_constraintEnd_toStartOf="@+id/yemekAdiEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/rating_bar"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="false"
        android:numStars="5"
        android:stepSize="1"
        app:layout_constraintBottom_toTopOf="@+id/buttonGuncelle"
        app:layout_constraintEnd_toEndOf="@+id/restoranPuantextView"
        app:layout_constraintStart_toStartOf="@+id/restoranPuantextView"
        app:layout_constraintTop_toBottomOf="@+id/restoranPuantextView" />


</androidx.constraintlayout.widget.ConstraintLayout>

